# OneRoof Globus Integration Configuration Template
# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control

# Globus Configuration
GLOBUS_CLIENT_ID=
GLOBUS_CLIENT_SECRET=
GLOBUS_REDIRECT_URI=

# Action Provider Configuration
ONEROOF_ACTION_URL=https://your-action-provider.example.com
ONEROOF_ACTION_SCOPE=

# Endpoint IDs
COMPUTE_ENDPOINT_ID=
STORAGE_ENDPOINT_ID=

# OneRoof Configuration
ONEROOF_PATH=/path/to/oneroof
ONEROOF_WORK_DIR=/path/to/work/directory
NEXTFLOW_PATH=nextflow
PIXI_PATH=pixi
USE_PIXI=false

# Compute Configuration
ENABLE_GPU=true
MAX_PARALLEL_RUNS=5

# Notification Settings (optional)
NOTIFICATION_EMAIL=
SLACK_WEBHOOK_URL=

# Logging
LOG_LEVEL=INFO

# Security
API_KEY=
API_KEY_HEADER=X-API-Key
